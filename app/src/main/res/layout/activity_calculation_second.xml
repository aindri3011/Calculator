<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculationSecond"
    android:orientation="vertical"
    android:background="@drawable/calculatordesign">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textStyle="bold"
            android:textSize="45dp"
            android:textColor="#FAF6F6"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/edt_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter first number"
            android:textStyle="bold"
            android:inputType="number"
            android:textColor="#D1CBCB"
            android:textSize="25dp"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp">
        <EditText
            android:id="@+id/edt_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter second number"
            android:textStyle="bold"
            android:inputType="number"
            android:textColor="#D1CDCD"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="4"
        android:layout_marginTop="100dp">
        <Button
            android:id="@+id/bu_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="+"
            android:textStyle="bold"
            android:textColor="#FDF6F6"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"/>
        <Button
            android:id="@+id/bu_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"/>
        <Button
            android:id="@+id/bu_multi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textStyle="bold"
            android:layout_weight="1"
           android:background="@drawable/buttondesign"
            android:textSize="35dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/bu_div"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="1"
            android:background="@drawable/buttondesign"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="35dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/txt_res"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:text="Result"
            android:textColor="#DAD6D6"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>